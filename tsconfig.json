{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"strict": true,
		"lib": ["ESNext"],
		"module": "commonjs",
		"noUnusedParameters": true,
		"outDir": "./dist",
		"sourceMap": true,
		"types": ["node"],
		"declaration": true,
		"noUnusedLocals": true,
		"removeComments": false,
		"importsNotUsedAsValues": "error",
		"target": "ESNext",
		"incremental": true,
		"resolveJsonModule": true,
	},
	"exclude": [
		"node_modules",
		"bin",
		"examples",
		"scripts"
	],
	"include": [
		"./src/**/*",
		"./test/**/*"
	  ]
}